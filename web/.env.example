# Frontend Web App Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Intent Trading Aggregator
NEXT_PUBLIC_APP_VERSION=0.1.0

# =============================================================================
# API ENDPOINTS
# =============================================================================

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3001

# WebSocket URL
NEXT_PUBLIC_WS_URL=ws://localhost:3002

# Base URL for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Chain Configuration
NEXT_PUBLIC_CHAIN_ID=196

# Contract Addresses
NEXT_PUBLIC_SETTLEMENT_CONTRACT=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_PERMIT2_ADDRESS=0x000000000022D473030F116dDEE9F6B43aC78BA3

# RPC Configuration (for wallet fallback)
NEXT_PUBLIC_RPC_URL=https://xlayerrpc.okx.com

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# Supported Chains (comma-separated chain IDs)
NEXT_PUBLIC_SUPPORTED_CHAINS=196,195

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature toggles
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Demo mode (shows demo data)
NEXT_PUBLIC_DEMO_MODE=false

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# Theme Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_BRAND_COLOR=#3b82f6

# Slippage Configuration
NEXT_PUBLIC_DEFAULT_SLIPPAGE=0.5
NEXT_PUBLIC_MAX_SLIPPAGE=5.0

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development URLs
NEXT_PUBLIC_DEV_API_URL=http://localhost:3001
NEXT_PUBLIC_DEV_WS_URL=ws://localhost:3002

# Development Flags
NEXT_PUBLIC_SHOW_DEV_TOOLS=true
NEXT_PUBLIC_MOCK_WALLET=false

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Production API URLs (uncomment for production)
# NEXT_PUBLIC_API_URL=https://api.intendly.xyz
# NEXT_PUBLIC_WS_URL=wss://ws.intendly.xyz
# NEXT_PUBLIC_BASE_URL=https://app.intendly.xyz

# Production Feature Flags (uncomment for production)
# NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
# NEXT_PUBLIC_SHOW_DEV_TOOLS=false
# NEXT_PUBLIC_ENABLE_ANALYTICS=true

# =============================================================================
# STAGING CONFIGURATION
# =============================================================================

# Staging URLs (uncomment for staging)
# NEXT_PUBLIC_API_URL=https://api-staging.intendly.xyz
# NEXT_PUBLIC_WS_URL=wss://ws-staging.intendly.xyz
# NEXT_PUBLIC_BASE_URL=https://staging.intendly.xyz

# =============================================================================
# TESTNET CONFIGURATION
# =============================================================================

# X Layer Testnet
NEXT_PUBLIC_TESTNET_CHAIN_ID=195
NEXT_PUBLIC_TESTNET_RPC_URL=https://testrpc.xlayer.tech
NEXT_PUBLIC_TESTNET_API_URL=http://localhost:3001

# =============================================================================
# TOKEN CONFIGURATION
# =============================================================================

# Default Token Addresses (X Layer Mainnet)
NEXT_PUBLIC_WETH_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_USDC_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_USDT_ADDRESS=0x0000000000000000000000000000000000000000

# =============================================================================
# SOCIAL & METADATA
# =============================================================================

# Social Links
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/intendly
NEXT_PUBLIC_DISCORD_URL=https://discord.gg/intendly
NEXT_PUBLIC_GITHUB_URL=https://github.com/yourorg/intent-based-trading-aggregator

# SEO Configuration
NEXT_PUBLIC_SITE_NAME=Intent Trading Aggregator
NEXT_PUBLIC_SITE_DESCRIPTION=Intent-based trading aggregator for optimal DeFi execution on L2s

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================

# Bundle Analysis
ANALYZE=false

# Source Maps
NEXT_PUBLIC_ENABLE_SOURCE_MAPS=false

# =============================================================================
# SECURITY NOTES
# =============================================================================

# IMPORTANT SECURITY REMINDERS:
# 1. Only NEXT_PUBLIC_ variables are exposed to the browser
# 2. Never put sensitive data in NEXT_PUBLIC_ variables
# 3. Private keys should NEVER be in frontend environment
# 4. Use different configurations for each environment
# 5. Validate all environment variables in the app
# 6. Use proper CSP headers in production
# 7. Keep dependencies updated
# 8. Use HTTPS in production

